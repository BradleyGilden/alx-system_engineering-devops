#!/usr/bin/env bash
# A Bash Script that uses a while loop with an if statement
# It prints 'Hi' on the 9th line and 'Best School' of the rest of the 10 lines

i=1
while [ "$i" -le 10 ]
do
    if [ "$i" -ne 9 ]; then
        echo "Best School"
    else
        echo "Hi"
    fi
    i=$((i + 1))
done
